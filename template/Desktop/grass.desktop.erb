[Desktop Entry]
Type=Application
Name=GRASS GIS
Terminal=true
<% if context.desktop == "mate" %>
Exec=bash -c 'ssh -t $HOSTNAME "export DISPLAY=$DISPLAY;export TMPDIR=$TMPDIR;export XDG_RUNTIME_DIR=$XDG_RUNTIME_DIR;module load qgis;grass"'
<%else%>
Exec=module load qgis;grass
<%end%>
Icon=<%= File.join(session.staged_root, "icons", "grass.png") -%>
