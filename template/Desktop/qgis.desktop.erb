[Desktop Entry]
Type=Application
Name=QGIS
Terminal=true
<% if context.desktop == "mate" %>
Exec=bash -c 'ssh -t $HOSTNAME "export DISPLAY=$DISPLAY;export TMPDIR=$TMPDIR;export XDG_RUNTIME_DIR=$XDG_RUNTIME_DIR;module load qgis;qgis"'
<%else%>
Exec=module load qgis;qgis
<%end%>
Icon=<%= File.join(session.staged_root, "icons", "qgis.png") -%>
