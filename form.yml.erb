<% require "/ood/deps/util/attributes/csc_smart_attributes" -%>

cluster: "puhti"

attributes:
  csc_slurm_partition:
    value: interactive
    select:
      - "interactive"
      - "small"
      - "test"
  desktop:
    widget: select
    options:
      - ["mate", "mate"]
      - ["xfce", "xfce"]
      - ["None", ""]
    value: "mate"
  app:
    widget: select
    options:
      - ["None", ""]
      - ["COMSOL", "comsol"]
      - ["Grace", "grace"]
      - ["Maestro", "maestro"]
      - ["MATLAB", "matlab"]
      - ["ParaView", "paraview"]
      - ["Visit", "visit"]
      - ["VMD", "vmd"]
  bc_vnc_idle: 0
  bc_vnc_resolution:
    required: true
  csc_cores:
    value: 2
  csc_nvme:
    value: 32
    max: 640
  csc_memory:
    value: 2
form:
  - csc_slurm_project
  - csc_slurm_partition
  - bc_vnc_idle
  - desktop
  - app
  - bc_vnc_resolution
  - csc_cores
  - csc_memory
  - csc_nvme
  - csc_time
  - bc_email_on_started
  - csc_slurm_limits
